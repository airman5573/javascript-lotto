{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-alert": "off",
    "import/extensions": "off",
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 15],
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "class-methods-use-this": "off"
  },
  "ignorePatterns": ["cypress/*", "test/*"]
}
